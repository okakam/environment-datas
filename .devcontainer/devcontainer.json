{
    "name": "Python Project",
    "dockerComposeFile": "../compose.yml",
    "service": "web-api",
    "workspaceFolder": "/usr/local/environment-data",
    "customizations": {
        "vscode": {
            "settings": { 
                "terminal.integrated.shell.linux": "/bin/bash"
            },
